<body>
    <div class="card" id="main-card">
        <h1>Will You Be My Valentine?</h1>
        <p>You make my world brighter and my heart fuller. I couldn't imagine this Valentine's Day without you.</p>
        <a href="#" class="btn" onclick="showYes()">Yes, I Will! ðŸ’–</a>
        <a href="#" class="btn" onclick="showNo()">No ðŸ˜¢</a>
    </div>

    <div class="card hidden" id="no-card">
        <h1>Are you sure? ðŸ¥º</h1>
        <p>I really hope youâ€™ll reconsider. You mean the world to me.</p>
        <a href="#" class="btn" onclick="simulateYes()">Take Me Back ðŸ’•</a>
    </div>

    <script>
        const compliments = [
            "You are beautiful",
            "You light up my world",
            "You have the kindest heart",
            "You inspire me every day",
            "You make everything better",
            "You are my sunshine",
            "You are perfect to me",
        ];

        function showNo() {
            document.getElementById('main-card').classList.add('hidden');
            document.getElementById('no-card').classList.remove('hidden');
        }

        function goBack() {
            document.getElementById('no-card').classList.add('hidden');
            document.getElementById('main-card').classList.remove('hidden');
        }

        function showYes() {
            setInterval(launchConfetti, 500);
            setInterval(launchBeautifulText, 2000);
            alert('Yay! You said yes! ðŸ’–');
        }

        function simulateYes() {
            setInterval(launchConfetti, 500);
            setInterval(launchBeautifulText, 2000);
            alert('Yay! You said yes! ðŸ’–');
            goBack();
        }

        function launchConfetti() {
            for (let i = 0; i < 10; i++) {
                let confetti = document.createElement('div');
                confetti.className = 'confetti';
                confetti.style.setProperty('--hue', Math.random() * 360);
                confetti.style.left = Math.random() * 100 + 'vw';
                confetti.style.animationDelay = Math.random() * 2 + 's';
                document.body.appendChild(confetti);
                setTimeout(() => confetti.remove(), 10000);
            }
        }

        function launchBeautifulText() {
            for (let i = 0; i < 5; i++) {
                let text = document.createElement('div');
                text.className = 'beautiful-text';
                text.innerText = compliments[Math.floor(Math.random() * compliments.length)];
                text.style.left = Math.random() * 100 + 'vw';
                text.style.animationDelay = Math.random() * 2 + 's';
                document.body.appendChild(text);
                setTimeout(() => text.remove(), 12000);
            }
        }

        // Start falling elements immediately
        setInterval(launchConfetti, 500);
        setInterval(launchBeautifulText, 2000);
    </script>
</body>
